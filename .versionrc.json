{
  "header": "# Changelog\n\nTodas as mudanças notáveis deste projeto serão documentadas neste arquivo.\n\n",
  "types": [
    { "type": "feat", "section": "Novos Recursos" },
    { "type": "fix", "section": "Correções de Bugs" },
    { "type": "perf", "section": "Melhorias de Performance" },
    { "type": "refactor", "section": "Refatorações" },
    { "type": "docs", "section": "Documentação", "hidden": true },
    { "type": "style", "section": "Estilo", "hidden": true },
    { "type": "test", "section": "Testes", "hidden": true },
    { "type": "build", "section": "Build", "hidden": true },
    { "type": "ci", "section": "CI/CD", "hidden": true },
    { "type": "chore", "section": "Outros", "hidden": true }
  ],
  "bumpFiles": [
    {
      "filename": "package.json",
      "type": "json"
    },
    {
      "filename": "apps/web/package.json",
      "type": "json"
    }
  ],
  "commitUrlFormat": "{{host}}/{{owner}}/{{repository}}/commit/{{hash}}",
  "compareUrlFormat": "{{host}}/{{owner}}/{{repository}}/compare/{{previousTag}}...{{currentTag}}"
}
