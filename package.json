{
  "name": "medsync",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=@medsync/web",
    "dev:mobile": "turbo dev --filter=@medsync/mobile",
    "build": "turbo build",
    "build:web": "turbo build --filter=@medsync/web",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.3.3",
    "typescript": "^5"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "overrides": {
      "react": "19.1.0",
      "react-dom": "19.1.0",
      "@types/react": "~19.1.0",
      "react-native-calendars>react": "19.1.0",
      "react-native-calendars>react-native": "0.81.5"
    }
  }
}
